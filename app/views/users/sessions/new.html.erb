

<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>
      <img src="/assets/logo.png">
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('sign_up.email') %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", :class=>"form-control", :placeholder=>t('sign_up.password'), :required=>"" %>
      </div>
      <%= f.submit t('login.sign_in'), :class=>"btn btn-primary block full-width m-b" %>

       <small><%= link_to t('login.forgot'), new_password_path(resource_name) %></small
    <% end %>
  </div>
</div>
