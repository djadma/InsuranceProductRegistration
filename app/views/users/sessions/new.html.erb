

<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>
      <img src="/assets/logo.png">
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('sign_up.email') %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", :class=>"form-control", :placeholder=>t('sign_up.password'), :required=>"" %>
      </div>
      <%= f.submit t('login.sign_in'), :class=>"btn btn-primary block full-width m-b" %>

       <small><%= link_to t('login.forgot'), new_password_path(resource_name) %></small>
      <p class="text-muted text-center"><small><%= t('login.have_account') %></small></p>
      <!-- <a class="btn btn-sm btn-white btn-block" href="<%#= url_for :controller => 'pages', :action => 'register' %>">Create an account</a> -->
      <%= link_to t('login.create_account'), new_user_registration_path, class: 'btn btn-sm btn-white btn-block' %>
    <% end %>
  </div>
</div>
