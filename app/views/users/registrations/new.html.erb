<div class="middle-box text-center loginscreen   animated fadeInDown">
  <div>
    <div>
      <img src="/assets/logo.png">
    </div>
    <p><%= t('sign_up.new_account') %></p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.text_field :username, autofocus: true, :class=>"form-control", :placeholder=>t('sign_up.name'), :required=>"" %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, :class=>"form-control", :placeholder=>t('sign_up.email'), :required=>""  %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", :class=>"form-control", :placeholder=>t('sign_up.password'), :required=>"" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control", :placeholder=>t('sign_up.confirmation'), :required=>"" %>
        </div>
        <div class="form-group">
            <div class="checkbox"><label> <input type="checkbox"><i></i> <%= t('sign_up.terms')%> </label></div>
        </div>
        <%= f.submit t('sign_up.register'),:class=>"btn btn-primary block full-width m-b" %>

        <%= render "users/shared/links" %>
    <% end %>
    <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small> </p>
  </div>
</div>